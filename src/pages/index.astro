---
import Layout from "@/layouts/Layout.astro";
import "@/styles/global.css";
import Navbar from "@/components/common/Navbar.astro";
import Hero from "@/components/sections/Hero.astro";
import Approach from "@/components/sections/Approach.astro";
import Stack from "@/components/sections/Stack.astro";
import Projects from "@/components/sections/Projects.astro";
import Services from "@/components/sections/Services.astro";
import About from "@/components/sections/About.astro";
import Footer from "@/components/common/Footer.astro";
// Data Imports
import { navItems, navCta } from "@/lib/data/common/navigation";
import { logoData } from "@/lib/data/common/logo";
import { heroData } from "@/lib/data/sections/hero";
import { stackData } from "@/lib/data/sections/stack";
import { servicesData } from "@/lib/data/sections/services";
import { aboutData } from "@/lib/data/sections/about";
import { approachData } from "@/lib/data/sections/approach";
import { code } from "@/lib/data";
import { footerData } from "@/lib/data/common/footer";
---

<Layout>
  <Navbar navItems={navItems} logoData={logoData} ctaData={navCta} />
  <Hero heroData={heroData} code={code} />
  <About
    title={aboutData.title}
    bio={aboutData.bio}
    learning={aboutData.learning}
    profileImage={aboutData.profileImage}
    description={aboutData.description}
  />
  <Approach
    title={approachData.title}
    description={approachData.description}
    cards={approachData.cards}
  />
  <Stack
    title={stackData.title}
    description={stackData.description}
    tabs={stackData.tabs}
    items={stackData.items}
  />
  <Projects />
  <Services title={servicesData.title} items={servicesData.items} />
  <Footer
    cta={footerData.cta}
    socialLinks={footerData.socialLinks}
    copyright={footerData.copyright}
  />
</Layout>
