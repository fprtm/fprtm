---
import { Icon } from "astro-icon/components";
import { githubData } from "@/lib/data/common/github";
import { approachData } from "@/lib/data/sections/approach";
import BigCard from "./approach/BigCard.astro";
import BackgroundGradient from "../common/BackgroundGradient.astro";
import MediumCard from "./approach/MediumCard.astro";
import SmallCard from "./approach/SmallCard.astro";

const { totalCommits } = githubData;
const { title, description, cards } = approachData;
---

<section id="approach" class="relative overflow-hidden py-24">
  <BackgroundGradient
    background={{
      from: "#0f172a",
      via: "#111827",
      to: "#1e293b",
    }}
    subtleGlow="purple"
  />

  <div class="container mx-auto px-6">
    <div class="mb-16 max-w-2xl">
      <h2 class="text-3xl font-semibold text-white md:text-4xl">
        {title}
      </h2>
      <p class="mt-4 leading-relaxed text-white/70">
        {description}
      </p>
    </div>
    <div class="grid auto-rows-[220px] gap-6 md:grid-cols-6">
      <!-- BIG CARD -->
      <BigCard
        title={cards.solution.title}
        description={cards.solution.description}
        profile={cards.solution.profile}
        badges={cards.solution.badges}
      />

      <!-- MEDIUM -->
      <MediumCard
        title={cards.security.title}
        description={cards.security.description}
        icon={cards.security.icon}
      />

      <!-- SMALL -->
      <SmallCard totalCommits={totalCommits} data={cards} />
    </div>
  </div>
</section>
