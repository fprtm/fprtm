---
import CodeBlock from "@/components/ui/CodeBlock.astro";

interface Props {
  title: string;
  code: string;
}

const { title, code } = Astro.props;
---

<div class="group relative mx-auto w-full max-w-lg">
  <!-- Background Layer -->
  <div
    class="absolute inset-0 -z-10 -rotate-1 rounded-2xl bg-(--color-electric-blue)/20 transition-all duration-300 group-hover:rotate-1"
  >
  </div>

  <!-- Main Card -->
  <div
    class="relative rounded-2xl border border-slate-700 bg-(--color-midnight-slate)/90 p-6 backdrop-blur-md backdrop-filter transition-all duration-300 group-hover:-rotate-1 group-hover:backdrop-blur-sm"
  >
    <!-- Top Bar -->
    <div class="mb-4 flex items-center gap-2">
      <div class="flex gap-1">
        <div class="h-3 w-3 rounded-full bg-red-400"></div>
        <div class="h-3 w-3 rounded-full bg-yellow-400"></div>
        <div class="h-3 w-3 rounded-full bg-green-400"></div>
      </div>
      <p class="text-sm text-(--color-text-muted) italic">{title}</p>
    </div>

    <!-- Code -->
    <CodeBlock code={code} lang="ts" />
  </div>
</div>
