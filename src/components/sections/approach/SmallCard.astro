---
import { Icon } from "astro-icon/components";

interface Props {
  totalCommits: string;
  data: {
    flexible: { title: string; description: string; icon: string };
    performance: { title: string; description: string; icon: string };
    cloud: { title: string; description: string; icon: string };
    structured: { title: string; description: string; icon: string };
  };
}

const { totalCommits, data } = Astro.props;
---

<!-- Flexible & Modern -->
<div
  class="group relative col-span-6 overflow-hidden rounded-2xl border border-[var(--color-slate-700)] bg-[var(--color-light-navy)] p-6 backdrop-blur-xl transition-all duration-300 hover:-translate-y-2 hover:border-[var(--color-electric-blue)] md:col-span-2"
>
  <div
    class="absolute top-8 -right-4 flex -rotate-12 flex-col gap-2 opacity-50 transition-all duration-500 group-hover:scale-105 group-hover:-rotate-6"
  >
    <div class="h-8 w-24 rounded-lg bg-white/10 shadow-lg backdrop-blur-md">
    </div>
    <div
      class="ml-4 h-8 w-24 rounded-lg bg-purple-500/20 shadow-lg backdrop-blur-md"
    >
    </div>
    <div
      class="ml-8 h-8 w-24 rounded-lg bg-white/10 shadow-lg backdrop-blur-md"
    >
    </div>
  </div>

  <Icon
    name={data.flexible.icon}
    class="h-5 w-5 text-[var(--color-cyber-teal)]"
  />
  <h3 class="mt-3 font-medium text-[var(--color-text-main)]">
    {data.flexible.title}
  </h3>
  <p class="mt-2 text-sm text-[var(--color-text-muted)]">
    {data.flexible.description}
  </p>
</div>

<!-- Github Commits Stats -->
<div
  class="group relative col-span-6 flex flex-col justify-center overflow-hidden rounded-2xl border border-[var(--color-slate-700)] bg-[var(--color-light-navy)] p-6 backdrop-blur-xl transition-all duration-300 hover:-translate-y-2 hover:border-[var(--color-electric-blue)] md:col-span-1"
>
  <div
    class="absolute top-2 right-2 opacity-10 transition-transform duration-500 group-hover:rotate-45"
  >
    <Icon name="lucide:github" class="h-16 w-16 text-white" />
  </div>

  <div class="flex items-center gap-2">
    <Icon
      name="lucide:git-commit-horizontal"
      class="h-6 w-6 text-[var(--color-cyber-teal)]"
    />
    <span
      class="text-xs font-medium tracking-wider text-[var(--color-cyber-teal)] uppercase"
    >
      Active
    </span>
  </div>
  <p class="mt-4 text-4xl font-bold text-[var(--color-text-main)]">
    {totalCommits}
  </p>
  <p class="mt-1 text-sm text-[var(--color-text-muted)]">Commits / Year</p>
</div>

<!-- Performance Matters -->
<div
  class="group relative col-span-6 overflow-hidden rounded-2xl border border-[var(--color-slate-700)] bg-[var(--color-light-navy)] p-6 backdrop-blur-xl transition-all duration-300 hover:-translate-y-2 hover:border-[var(--color-electric-blue)] md:col-span-2"
>
  <!-- Simple Sparkline Decor -->
  <div
    class="absolute right-0 bottom-0 h-16 w-32 opacity-20 transition-all duration-500 group-hover:scale-110 group-hover:opacity-30"
  >
    <svg
      viewBox="0 0 100 40"
      class="h-full w-full fill-none stroke-purple-400"
      stroke-width="2"
    >
      <path
        d="M0 30 Q 10 25, 20 28 T 40 20 T 60 15 T 80 5 L 100 0 V 40 H 0 Z"
        fill="url(#gradient)"
        class="fill-purple-500/50 stroke-none opacity-30"></path>
      <path
        d="M0 30 Q 10 25, 20 28 T 40 20 T 60 15 T 80 5"
        stroke-linecap="round"
        stroke-linejoin="round"></path>
    </svg>
  </div>

  <Icon
    name={data.performance.icon}
    class="h-5 w-5 text-[var(--color-cyber-teal)]"
  />
  <h3 class="mt-3 font-medium text-[var(--color-text-main)]">
    {data.performance.title}
  </h3>
  <p class="mt-2 text-sm text-[var(--color-text-muted)]">
    {data.performance.description}
  </p>
</div>

<!-- Cloud Ready -->
<div
  class="group relative col-span-6 overflow-hidden rounded-2xl border border-[var(--color-slate-700)] bg-[var(--color-light-navy)] p-6 backdrop-blur-xl transition-all duration-300 hover:-translate-y-2 hover:border-[var(--color-electric-blue)] md:col-span-2"
>
  <div
    class="absolute right-5 bottom-5 flex gap-2 opacity-30 transition-opacity duration-300 group-hover:opacity-60"
  >
    <div class="h-3 w-3 animate-pulse rounded-full bg-green-500"></div>
    <div class="h-3 w-3 animate-pulse rounded-full bg-green-500 delay-75"></div>
    <div class="h-3 w-3 animate-pulse rounded-full bg-green-500 delay-150">
    </div>
  </div>

  <Icon name={data.cloud.icon} class="h-5 w-5 text-[var(--color-cyber-teal)]" />
  <h3 class="mt-3 font-medium text-[var(--color-text-main)]">
    {data.cloud.title}
  </h3>
  <p class="mt-2 text-sm text-[var(--color-text-muted)]">
    {data.cloud.description}
  </p>
</div>

<!-- Structured & Scalable -->
<div
  class="group relative col-span-6 overflow-hidden rounded-2xl border border-[var(--color-slate-700)] bg-[var(--color-light-navy)] p-6 backdrop-blur-xl transition-all duration-300 hover:-translate-y-2 hover:border-[var(--color-electric-blue)] md:col-span-2"
>
  <!-- File Tree Pattern -->
  <div
    class="absolute top-8 right-6 flex flex-col gap-3 opacity-20 transition-opacity duration-300 group-hover:opacity-40"
  >
    <div class="flex items-center gap-2">
      <div class="h-1.5 w-1.5 rounded-full bg-white"></div>
      <div class="h-1 w-12 rounded-full bg-white/50"></div>
    </div>
    <div class="ml-4 flex items-center gap-2">
      <div class="h-3 w-3 rounded-bl-md border-b border-l border-white/30">
      </div>
      <div class="h-1 w-8 rounded-full bg-white/50"></div>
    </div>
    <div class="ml-4 flex items-center gap-2">
      <div class="h-3 w-3 rounded-bl-md border-b border-l border-white/30">
      </div>
      <div class="h-1 w-10 rounded-full bg-white/50"></div>
    </div>
  </div>

  <Icon
    name={data.structured.icon}
    class="h-5 w-5 text-[var(--color-cyber-teal)]"
  />
  <h3 class="mt-3 font-medium text-[var(--color-text-main)]">
    {data.structured.title}
  </h3>
  <p class="mt-2 text-sm text-[var(--color-text-muted)]">
    {data.structured.description}
  </p>
</div>
