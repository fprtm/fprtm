---
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  items: {
    title: string;
    description: string;
    icon: string;
  }[];
}

const { title, items } = Astro.props;
---

<section id="services" class="py-24">
  <div class="container mx-auto px-6">
    <div class="mb-16 max-w-2xl">
      <h2 class="text-primary text-3xl font-semibold md:text-4xl">
        {title}
      </h2>
    </div>

    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        items.map((item) => (
          <div class="group relative rounded-2xl border border-gray-800 bg-gray-900/50 p-8 transition-colors hover:border-gray-700 hover:bg-gray-900">
            <div class="mb-6 inline-flex rounded-lg bg-indigo-500/10 p-3 text-indigo-400 group-hover:text-indigo-300">
              <Icon name={item.icon} class="h-8 w-8" />
            </div>
            <h3 class="mb-3 text-xl font-semibold text-white">{item.title}</h3>
            <p class="leading-relaxed text-gray-400">{item.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
