---
import { Icon } from "astro-icon/components";
import HeroBackground from "./hero/HeroBackground.astro";
import HeroCodeCard from "./hero/HeroCodeCard.astro";
import HeroContent from "./hero/HeroContent.astro";
---

<section class="flex min-h-screen w-full items-center py-20">
  <!-- Background Glass Blur -->
  <HeroBackground />
  <!-- Content -->
  <div class="container mx-auto grid items-center gap-16 px-6 md:grid-cols-2">
    <!-- LEFT: Text Content -->
    <HeroContent />
    <!-- RIGHT: Code Card -->
    <HeroCodeCard />
  </div>
</section>
