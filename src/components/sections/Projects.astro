---
import { Icon } from "astro-icon/components";
import BackgroundAnimate from "../common/BackgroundAnimate.astro";
---

<section class="overflow- relative py-24">
  <BackgroundAnimate backgroundColor="primary" />
  <div class="container mx-auto px-6">
    <div class="mb-16 max-w-2xl">
      <h2 class="text-primary text-3xl font-semibold md:text-4xl">
        {"Selected Works"}
      </h2>
      <p class="mt-4 leading-relaxed">
        {"Here are some of my recent projects"}
      </p>
    </div>
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
      <div
        accesskey="items-1"
        class="group relative flex flex-col rounded-xl border border-gray-200 bg-white shadow-sm transition hover:-translate-y-1 hover:shadow-lg"
      >
        <span
          class="bg-primary border-primary absolute top-2 right-2 z-10 rounded-full border px-5 py-1 text-white"
          >New</span
        >
        <div class="aspect-3/2 w-full overflow-hidden rounded-t-xl">
          <img
            src="https://picsum.photos/600/600"
            alt=""
            class="h-full w-full object-cover transition group-hover:scale-105"
          />
        </div>
        <div class="flex flex-col gap-2 p-6">
          <div>
            <h3 class="font-semibold">Project Name</h3>
          </div>
          <div class="mb-4 line-clamp-2">
            <p>
              Lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam,
              quod.
            </p>
          </div>
          <div class="mb-4 flex gap-2">
            <span class="rounded-full border px-2 py-0.5 text-xs">Next.js</span>
            <span class="rounded-full border px-2 py-0.5 text-xs">React</span>
            <span class="rounded-full border px-2 py-0.5 text-xs">Node.js</span>
          </div>
          <div class="flex justify-between gap-2">
            <a
              href="#"
              class="flex items-center gap-2 rounded-lg border border-gray-200 px-4 py-2"
            >
              <span>Repo</span>
              <Icon name="lucide:arrow-right" />
            </a>
            <a
              href="#"
              class="flex items-center gap-2 rounded-lg border border-gray-200 px-4 py-2"
            >
              <span>Demo</span>
              <Icon name="lucide:arrow-right" />
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
