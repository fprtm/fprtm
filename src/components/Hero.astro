---
import { Icon } from "astro-icon/components";
import CodeBlock from "./CodeBlock.astro";

const code = `
const status = "available";
const message = "I'm currently available for new projects.";
const stack = ["React", "Node.js", "PostgreSQL", "TypeScript"];
const experience = "2+ years";

export async function getProjects() {
  const response = await fetch("/api/projects");
  const data = await response.json();
  return data;
}
`;
---

<section class="flex min-h-screen w-full items-center py-20">
  <!-- Animated Gradient -->
  <div class="bg-animated absolute inset-0 -z-20 opacity-20"></div>

  <!-- Floating Blob -->
  <div
    class="blob-float bg-accent absolute top-20 right-10 -z-10 h-72 w-72 rounded-full opacity-30 blur-3xl"
  >
  </div>

  <!-- Content -->
  <div class="container mx-auto grid items-center gap-16 px-6 md:grid-cols-2">
    <!-- LEFT: Text Content -->
    <div class="space-y-6">
      <h1 class="text-primary text-4xl leading-tight font-bold md:text-5xl">
        Building Web Solutions That Drive Business Growth.
      </h1>

      <p class="text-primary/80 max-w-lg leading-relaxed">
        I am a Fullstack Developer who translates complex requirements into
        secure, scalable, and user-friendly applications. Flexible tech stacks,
        solid results.
      </p>

      <div class="flex flex-wrap gap-4 pt-2">
        <a
          href="#"
          class="bg-primary flex items-center gap-2 rounded-lg px-5 py-2.5 text-white transition hover:opacity-90"
        >
          <Icon name="lucide:download" class="h-4 w-4" />
          Download CV
        </a>

        <a
          href="#"
          class="border-primary text-primary hover:bg-primary flex items-center gap-2 rounded-lg border px-5 py-2.5 transition hover:text-white"
        >
          <Icon name="lucide:arrow-right" class="h-4 w-4" />
          View My Work
        </a>
      </div>

      <div class="text-primary/70 flex items-center gap-2 pt-4 text-sm">
        <span>Security-Aware Development</span>
        <Icon name="lucide:dot" class="h-4 w-4" />
        <span>Modern Tech Stack</span>
      </div>
    </div>

    <!-- RIGHT: Code Card -->
    <div class="group relative mx-auto w-full max-w-lg">
      <!-- Background Layer -->
      <div
        class="bg-primary absolute inset-0 -z-10 -rotate-1 rounded-2xl transition-all duration-300 group-hover:rotate-1"
      >
      </div>

      <!-- Main Card -->
      <div
        class="border-primary/30 relative rounded-2xl border p-6 backdrop-blur-md backdrop-filter transition-all duration-300 group-hover:-rotate-1 group-hover:backdrop-blur-sm"
      >
        <!-- Top Bar -->
        <div class="mb-4 flex items-center gap-2">
          <div class="flex gap-1">
            <div class="h-3 w-3 rounded-full bg-red-400"></div>
            <div class="h-3 w-3 rounded-full bg-yellow-400"></div>
            <div class="h-3 w-3 rounded-full bg-green-400"></div>
          </div>
          <p class="text-primary/70 text-sm italic">Status-Available.ts</p>
        </div>

        <!-- Code -->
        <CodeBlock code={code} lang="ts" />
      </div>
    </div>
  </div>
</section>
