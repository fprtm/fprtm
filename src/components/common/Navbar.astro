---
import Logo from "./navbar/Logo.astro";
import Menu from "./navbar/Menu.astro";
import CTA from "./navbar/CTA.astro";
import type { NavItem } from "@/lib/data/common/navigation";

interface Props {
  navItems: NavItem[];
  logoData: {
    brandInitial: string;
    brandHandle: string;
    href: string;
  };
  ctaData: {
    text: string;
    href: string;
    icon: string;
  };
}

const { navItems, logoData, ctaData } = Astro.props;
---

<nav class="absolute top-4 z-50 w-full">
  <div
    class="relative container mx-auto flex items-center justify-between rounded-xl border border-[var(--color-slate-700)] bg-[var(--color-light-navy)]/80 px-4 py-3 text-[var(--color-text-main)] backdrop-blur-md md:rounded-2xl"
  >
    <!-- Logo -->
    <Logo
      brandInitial={logoData.brandInitial}
      brandHandle={logoData.brandHandle}
      href={logoData.href}
    />
    <!-- Menu -->
    <Menu items={navItems} cta={ctaData} />
    <!-- Desktop CTA + Hamburger -->
    <CTA text={ctaData.text} href={ctaData.href} icon={ctaData.icon} />
  </div>
</nav>
