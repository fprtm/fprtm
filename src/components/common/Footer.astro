---
import { Icon } from "astro-icon/components";

interface Props {
  cta: {
    title: string;
    description: string;
    primaryAction: {
      text: string;
      href: string;
      icon: string;
    };
    secondaryAction: {
      text: string;
      href: string;
      icon: string;
    };
  };
  socialLinks: {
    name: string;
    href: string;
    icon: string;
  }[];
  copyright: {
    text: string;
  };
}

const { cta, socialLinks, copyright } = Astro.props;
---

<footer id="contact" class="relative bg-[#0a0a0a] py-24">
  <div class="container mx-auto px-6">
    <!-- CTA Section -->
    <div class="mb-16 text-center">
      <h2 class="text-4xl font-bold text-white md:text-5xl lg:text-6xl">
        {cta.title}
      </h2>
      <p class="mx-auto mt-6 max-w-xl text-lg text-gray-400">
        {cta.description}
      </p>

      <!-- Action Buttons -->
      <div
        class="mt-10 flex flex-col items-center justify-center gap-4 sm:flex-row"
      >
        <a
          href={cta.primaryAction.href}
          class="group flex items-center gap-3 rounded-full bg-white px-8 py-4 text-lg font-semibold text-black transition-all hover:scale-105 hover:bg-gray-100"
        >
          <Icon name={cta.primaryAction.icon} class="h-5 w-5" />
          {cta.primaryAction.text}
        </a>
        <a
          href={cta.secondaryAction.href}
          target="_blank"
          rel="noopener noreferrer"
          class="group flex items-center gap-3 rounded-full border border-white/20 bg-transparent px-8 py-4 text-lg font-semibold text-white transition-all hover:border-white/40 hover:bg-white/5"
        >
          <Icon name={cta.secondaryAction.icon} class="h-5 w-5" />
          {cta.secondaryAction.text}
        </a>
      </div>
    </div>

    <!-- Divider -->
    <div class="mb-12 h-px w-full bg-white/10"></div>

    <!-- Bottom Section -->
    <div class="flex flex-col items-center justify-between gap-8 md:flex-row">
      <!-- Social Links -->
      <div class="flex items-center gap-6">
        {
          socialLinks.map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 transition-colors hover:text-white"
              aria-label={link.name}
            >
              <Icon name={link.icon} class="h-6 w-6" />
            </a>
          ))
        }
      </div>

      <!-- Copyright -->
      <p class="text-sm text-gray-500">
        {copyright.text}
      </p>
    </div>
  </div>
</footer>
