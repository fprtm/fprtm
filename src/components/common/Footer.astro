---
import { Icon } from "astro-icon/components";

interface Props {
  cta: {
    title: string;
    description: string;
    primaryAction: {
      text: string;
      href: string;
      icon: string;
    };
    secondaryAction: {
      text: string;
      href: string;
      icon: string;
    };
  };
  socialLinks: {
    name: string;
    href: string;
    icon: string;
  }[];
  copyright: {
    text: string;
  };
}

const { cta, socialLinks, copyright } = Astro.props;
---

<footer
  id="contact"
  class="relative border-t border-[var(--color-slate-700)] bg-[var(--color-midnight-slate)] py-24"
>
  <div class="container mx-auto px-6">
    <!-- CTA Section -->
    <div class="mb-16 text-center">
      <h2
        class="text-4xl font-bold text-[var(--color-text-main)] md:text-5xl lg:text-6xl"
      >
        {cta.title}
      </h2>
      <p class="mx-auto mt-6 max-w-xl text-lg text-[var(--color-text-muted)]">
        {cta.description}
      </p>

      <!-- Action Buttons -->
      <div
        class="mt-10 flex flex-col items-center justify-center gap-4 sm:flex-row"
      >
        <a
          href={cta.primaryAction.href}
          class="group btn-gradient flex items-center gap-3 rounded-full px-8 py-4 text-lg font-semibold transition-all hover:scale-105"
        >
          <Icon name={cta.primaryAction.icon} class="h-5 w-5" />
          {cta.primaryAction.text}
        </a>
        <a
          href={cta.secondaryAction.href}
          target="_blank"
          rel="noopener noreferrer"
          class="group flex items-center gap-3 rounded-full border border-[var(--color-slate-700)] bg-[var(--color-light-navy)] px-8 py-4 text-lg font-semibold text-[var(--color-text-main)] transition-all hover:border-[var(--color-electric-blue)] hover:bg-[var(--color-slate-700)]"
        >
          <Icon name={cta.secondaryAction.icon} class="h-5 w-5" />
          {cta.secondaryAction.text}
        </a>
      </div>
    </div>

    <!-- Divider -->
    <div class="mb-12 h-px w-full bg-[var(--color-slate-700)]"></div>

    <!-- Bottom Section -->
    <div class="flex flex-col items-center justify-between gap-8 md:flex-row">
      <!-- Social Links -->
      <div class="flex items-center gap-6">
        {
          socialLinks.map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-[var(--color-text-muted)] transition-colors hover:text-[var(--color-cyber-teal)]"
              aria-label={link.name}
            >
              <Icon name={link.icon} class="h-6 w-6" />
            </a>
          ))
        }
      </div>

      <!-- Copyright -->
      <p class="text-sm text-[var(--color-text-muted)]">
        {copyright.text}
      </p>
    </div>
  </div>
</footer>
